<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.wuqs.ontime">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="net.wuqs.ontime.feature.home.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.wuqs.ontime.feature.currentalarm.AlarmActivity"
            android:taskAffinity="" />

        <activity
            android:name="net.wuqs.ontime.feature.editalarm.EditAlarmActivity"
            android:parentActivityName="net.wuqs.ontime.feature.home.MainActivity" />

        <activity android:name="net.wuqs.ontime.feature.missedalarms.MissedAlarmsActivity" />

        <receiver
            android:name=".alarm.AlarmStateManager"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="net.wuqs.ontime.action.ALARM_START" />
                <action android:name="net.wuqs.ontime.action.SCHEDULE_ALL_ALARMS" />
                <action android:name="net.wuqs.ontime.action.SHOW_MISSED_ALARMS" />
            </intent-filter>
        </receiver>

    </application>

</manifest>